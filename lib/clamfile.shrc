clamfile.init() {
  local base=${1:-"${CLENV_ROOT}/environments/${CLENV_ENVIRONMENT}"}
  local _absdir=$(cd ${base} && pwd)
  __clamfile_path=${base}/Clamfile
  touch $__clamfile_path
}

clamfile.find() {
  local module=$1
  awk "\$1 == \"$module\"" $__clamfile_path
}

clamfile.add() {
  local module=$1
  local version=$2
  echo -e "$module\t$version" >> $__clamfile_path
}

clamfile.list() {
  cat $__clamfile_path
}

