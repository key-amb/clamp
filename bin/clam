#!/usr/bin/env bash

set -euo pipefail

version="0.1.12"

source ${CLENV_ROOT}/lib/clamdb.shrc

if [[ ${CLAM_DEBUG:-} ]]; then
  set -x
fi

help() {
  pod2text $0
  exit 1
}

version() {
  local _verbose=${1:-}
  if [[ $_verbose ]]; then
    echo "clam - version $version"
  else
    echo $version
  fi
  exit 0
}

list() {
  clamdb_init
  clamdb_list
  exit 0
}

case "$1" in
  "install" | "--install" )
    command=install
    shift
    ;;
  "uninstall" | "-u" | "--uninstall" )
    command=uninstall
    shift
    ;;
  "install-deps" | "--install-deps" )
    command=install-deps
    shift
    ;;
  "list" | "-l" | "--list" )
    list
    ;;
  "-h" | "--help" )
    help
    ;;
  "-v" )
    version
    ;;
  "--version" )
    version --verbose
    ;;
  * )
    command=install
    ;;
esac

if [[ -z ${CLENV_ENVIRONMENT:-} ]]; then
  echo "CLENV_ENVIRONMENT not set! Please run 'clenv use \$env'." >&2
  exit 1
fi

exec ${CLENV_ROOT}/libexec/clam-${command} "$@"

exit 0

: <<'__EOF__'

=encoding utf8

=head1 NAME

B<clam> - clenv module manager

=head1 SYNOPSYS

Install:

    clam [install] git://<repos-url> [-f|--force]
    clam [install] /path/to/module [-f|--force]

Install from C<Clamfile>:

    clam install-deps|--install-deps [Clamfile]
    clam [install] -r|--require [Clamfile]

List installed modules:

    clam list|-l|--list

Uninstall:

    clam uninstall|-u <MODULE>

Help:

    clam -h|--help

Show version:

    clam -v|--version

=head1 DESCRIPTION

This script manages C<clam> modules.

=head1 AUTHORS

IKEDA Kiyoshi E<lt>yasutake.kiyoshi@gmail.comE<gt>

=head1 LICENSE

The MIT License (MIT)

Copyright (c) 2016 IKEDA Kiyoshi

=cut

__EOF__

