#!/bin/bash

set -euo pipefail

git_sync() {
  local _target=$1
  local _dest=$2

  if [ -d $_dest ]; then
    cd $_dest
    git pull
  else
    git clone ${_target} ${_dest}
    cd $_dest
  fi
}

target=$1
if [ -d $target -a -r ${target}/clam.spec ]; then
  mode=copy
  _path=$(cd $target; pwd)
  module=${_path##*/}
else
  mode=git
  module=${target##*/}
  module=${module%.git}
fi

dest_dir=${CLENV_ROOT}/environments/${CLENV_ENVIRONMENT}/modules
dest_module=${dest_dir}/${module}

echo "Sync ${target} into ${dest_module}"
case "$mode" in
  "copy" )
    cp -rp $target $dest_module
    ;;
  "git" )
    git_sync $target $dest_module
    ;;
  * )
    ;;
esac

bin_dir=${CLENV_ROOT}/environments/${CLENV_ENVIRONMENT}/bin
lib_dir=${CLENV_ROOT}/environments/${CLENV_ENVIRONMENT}/lib
cd $dest_module

if [ -r clam.spec ];then
  unset version
  unset executables
  unset resources
  source clam.spec
else
  echo "clam.spec file not found! Can't install." >&2
  exit 1
fi

install_materials() {
  local _src=$1
  local _dest=$2
  local f

  if [[ $_src ]]; then
    for f in $(\ls -1 $_src); do
      if [ -f $f ]; then
        cp -p $f ${_dest}/
      else
        echo "Not exist $f Skip." >&2
      fi
    done
  fi
}

install_materials "${executables:-}" $bin_dir
install_materials "${resources:-}" $lib_dir

echo "Installed ${module} ${version:-}"

exit 0

: <<'__EOF__'

=encoding utf8

=head1 NAME

B<clam> - clenv module manager

=head1 SYNOPSYS

    # Install or Update
    clam git://<repos-url>
    clam /path/to/module

=head1 DESCRIPTION

TBD.

=head1 AUTHORS

YASUTAKE Kiyoshi E<lt>yasutake.kiyoshi@gmail.comE<gt>

=cut

__EOF__

