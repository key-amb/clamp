#!/usr/bin/env bash

set -euo pipefail

if [[ ${CLAM_DEBUG:-} ]]; then
  set -x
fi

if [[ -z ${CLENV_ENVIRONMENT:-} ]]; then
  echo "CLENV_ENVIRONMENT not set! Please run 'clenv use \$env'." >&2
  exit 1
fi

exec ${CLENV_ROOT}/libexec/clam-install "$@"

exit 0

: <<'__EOF__'

=encoding utf8

=head1 NAME

B<clam> - clenv module manager

=head1 SYNOPSYS

    # Install or Update
    clam git://<repos-url>
    clam /path/to/module

=head1 DESCRIPTION

This script manages C<clam> modules.

=head1 AUTHORS

YASUTAKE Kiyoshi E<lt>yasutake.kiyoshi@gmail.comE<gt>

=head1 LICENSE

The MIT License (MIT)

Copyright (c) 2016 YASUTAKE Kiyoshi

=cut

__EOF__

