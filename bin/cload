#!/usr/bin/env bash

set -euo pipefail

version="0.6.0"

base_dir="$(cd $(dirname $0)/.. && pwd)"
shrc_dir="${base_dir}/shrc.d"
source "${shrc_dir}/cload.shrc"

[[ ${CLOAD_DEBUG:-} ]] && set -x

help() {
  pod2text $0
  exit 1
}

version() {
  local _verbose=${1:-}
  if [[ $_verbose ]]; then
    echo "cload - version $version"
  else
    echo $version
  fi
  exit 0
}

arg="${1:-}"

case "$arg" in
  "" | "-h" | "--help" )
    help ;;
  "-v" )
    version ;;
  "--version" )
    version --verbose ;;
  "-" )
    echo ". '${shrc_dir}/cload.shrc'"
    exit
    ;;
  * ) ;;
esac

shrc="$arg"
shrc_path="$(cload_search $shrc)" || :
if [[ "$shrc_path" ]]; then
  echo ". '$shrc_path'"
  exit 0
fi

echo "cload: '$shrc' not found" >&2

exit 1

: <<'__EOF__'

=encoding utf8

=head1 NAME

B<cload> - Load shell resource from C<$CLOAD_PATH>

=head1 SYNOPSYS

    # Load 'foo' or 'foo.sh' or 'foo.shrc'
    eval "$(cload foo)"

    # Load 'cllib' function on current shell
    eval "$(cload -)"

=head1 DESCRIPTION

Print command to load specified shell resource file.
The file is searched from C<$CLOAD_PATH> which contains some directories in the
filesystem.

=head1 SEE ALSO

L<shrc.d/cload.shrc>

=head1 AUTHORS

IKEDA Kiyoshi E<lt>yasutake.kiyoshi@gmail.comE<gt>

=head1 LICENSE

The MIT License (MIT)

Copyright (c) 2016 IKEDA Kiyoshi

=cut

__EOF__

