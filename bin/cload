#!/usr/bin/env bash

set -euo pipefail

version="0.2.1"

bin_dir=$(cd $(dirname $0) && pwd)
lib_dir=$(cd ${bin_dir}/../shrc.d && pwd)
source ${lib_dir}/cload.shrc

if [[ ${CLOAD_DEBUG:-} ]]; then
  set -x
fi

help() {
  pod2text $0
  exit 1
}

version() {
  local _verbose=${1:-}
  if [[ $_verbose ]]; then
    echo "cload - version $version"
  else
    echo $version
  fi
  exit 0
}

case "$1" in
  "-h" | "--help" )
    help ;;
  "-v" )
    version ;;
  "--version" )
    version --verbose ;;
  "-" )
    echo ". ${lib_dir}/cload.shrc"
    exit
    ;;
  * ) ;;
esac

shrc=$1
shrc_path=$(cload_search $shrc) || :
if [[ $shrc_path ]]; then
  echo ". $shrc_path"
  exit 0
fi

echo "Can't load $shrc." >&2

exit 1

: <<'__EOF__'

=encoding utf8

=head1 NAME

B<cload> - Load shell resource from C<$CLOAD_PATH>

=head1 SYNOPSYS

    # Load 'foo' or 'foo.sh' or 'foo.shrc'
    eval "$(cload foo)"

    # Load 'cllib' function on current shell
    eval "$(cload -)"

=head1 DESCRIPTION

Print command to load specified shell resource file.
The file is searched from C<$CLOAD_PATH> which contains some directories in the
filesystem.

=head1 AUTHORS

IKEDA Kiyoshi E<lt>yasutake.kiyoshi@gmail.comE<gt>

=head1 LICENSE

The MIT License (MIT)

Copyright (c) 2016 IKEDA Kiyoshi

=cut

__EOF__

