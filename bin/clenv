#!/usr/bin/env bash

set -euo pipefail

help() {
  pod2text $0
  exit 1
}

init-env() {
  local env=${1:-default}
  local base_dir=${CLENV_BASE_DIR:-$HOME/.clenv}
  mkdir -p ${base_dir}/shims
  mkdir -p ${base_dir}/environments/${env}
  echo "Initialized env '$env'"
}

list-env() {
  local base_dir=${CLENV_BASE_DIR:-$HOME/.clenv}
  ls -1 ${base_dir}/environments/
}

command=${1:-}

if [[ -z $command || $command =~ ^-?-h.* ]]; then
  help
fi

$1

exit 0

: <<'__EOF__'

=encoding utf8

=head1 NAME

B<clenv> - Command-Line Assembly of Modules or Packages

=head1 SYNOPSYS

    clenv init-env $env
    clenv list-env

=head1 DESCRIPTION

TBD.

=head1 AUTHORS

YASUTAKE Kiyoshi E<lt>yasutake.kiyoshi@gmail.comE<gt>

=cut

__EOF__

