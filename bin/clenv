#!/usr/bin/env bash

set -euo pipefail

version="0.2.2"

source ${CLENV_ROOT}/shrc.d/clenv.shrc

help() {
  local command=${1:-}
  if [[ ${command} ]]; then
    command_path="$(command -v "clenv-$command" || true)"
    if [[ "${command_path}" ]]; then
      pod2text "${command_path}"
      exit 1
    else
      echo "No such command: $command" >&2
    fi
  fi
  pod2text $0
  exit 1
}

init-env() {
  [[ ${CLENV_DEBUG:-} ]] && set -x
  local _env=${1:-${__clenv_default_env}}
  local _env_dir=${__clenv_base_dir}/environments/${_env}
  if [ -d $_env_dir ]; then
    echo "'$_env' already exists" >&2
  else
    mkdir -p $_env_dir/{bin,lib,modules}
    echo "Initialized env '$_env'"
  fi
  set +x
}

list-env() {
  local _env
  for _env in $(\ls -1 ${__clenv_base_dir}/environments/); do
    local _pref=" "
    if [[ $_env = $CLENV_ENVIRONMENT ]]; then
      _pref="*"
    fi
    echo "${_pref} ${_env}"
  done
}

version() {
  local _verbose=${1:-}
  if [[ $_verbose ]]; then
    echo "clenv - version $version"
  else
    echo $version
  fi
}

export PATH=${CLENV_ROOT}/libexec:$PATH

command=${1:-}

case "$command" in
  "" | "-h" | "--help" | "help" )
    help ${2:-}
    ;;
  "-v" )
    version
    ;;
  "--version" )
    version --verbose
    ;;
  "init-env" | "list-env" )
    shift
    ${command} "$@"
    ;;
  * )
    command_path="$(command -v "clenv-$command" || true)"
    if [[ -z "${command_path}" ]]; then
      echo "no such command - '$command'" >&2
      exit 1
    fi
    shift
    exec "${command_path}" "$@"
    ;;
esac

exit 0

: <<'__EOF__'

=encoding utf8

=head1 NAME

B<clenv> - CLI to control I<clenv> environments

=head1 SYNOPSYS

Initialize an environment:

    clenv init-env $env

Switch environments:

    . shrc.d/clenv.shrc

    # switch and load libraries
    clenv_use $env
    # only switch
    clenv_switch $env

List environments:

    clenv list-env

Commands:

    clenv which EXECUTABLE  # Show path of EXECUTABLE in clenv

Help:

    clenv -h|--help|help [COMMAND]

Show version:

    clenv -v|--version

=head1 DESCRIPTION

C<clenv> is a toolkit to organize Command-Line environments including executable
scripts and shell resource files.

See L<README.md> for more information.

=head1 SEE ALSO

L<shrc.d/clenv.shrc>

=head1 AUTHORS

IKEDA Kiyoshi E<lt>yasutake.kiyoshi@gmail.comE<gt>

=head1 LICENSE

The MIT License (MIT)

Copyright (c) 2016 IKEDA Kiyoshi

=cut

__EOF__

